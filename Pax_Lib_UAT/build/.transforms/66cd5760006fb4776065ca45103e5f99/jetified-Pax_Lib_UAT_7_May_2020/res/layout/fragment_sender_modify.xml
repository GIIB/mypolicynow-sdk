<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_2">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_with_white_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_mobile"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/etuMobile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:cursorVisible="true"
                android:editable="false"
                android:enabled="false"
                android:gravity="center"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:background="@null"
                android:singleLine="true"
                android:textColorHint="#567295" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_with_white_background">

            <EditText
                android:id="@+id/etuName"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Name"
                android:singleLine="true"
                android:textColorHint="#567295" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/kycUOneView"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/mobileView"
                android:layout_weight=".5">


                <TextView
                    android:id="@+id/txtukyc1"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="KYC 1"
                    android:background="@drawable/rounded_button_with_white_background"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/below_arrow" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/etkycOne"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/mobileView"
                android:background="@drawable/rounded_button_with_white_background"
                android:layout_weight=".4">

                <EditText
                    android:id="@+id/etukyc1"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:hint="Enter Id"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColorHint="#567295" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/kycUTwoView"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/mobileView"
                android:layout_weight=".5">


                <TextView
                    android:id="@+id/txtukyc2"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="KYC 2"
                    android:background="@drawable/rounded_button_with_white_background"
                    android:textColor="#000"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/below_arrow" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/etkycTwo"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/mobileView"
                android:background="@drawable/rounded_button_with_white_background"
                android:layout_weight=".4">

                <EditText
                    android:id="@+id/etukyc2"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:background="@null"
                    android:hint="Enter Id"
                    android:singleLine="true"
                    android:textColorHint="#567295" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_with_white_background">

            <EditText
                android:id="@+id/etuadd1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:hint="Address Line 1"
                android:singleLine="true"
                android:textColorHint="#567295" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_with_white_background">

            <EditText
                android:id="@+id/etuadd2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Address Line 2"
                android:singleLine="true"
                android:background="@null"
                android:textColorHint="#567295" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:background="@drawable/rounded_button_with_white_background">

                <EditText
                    android:id="@+id/etupincode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Pin Code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColorHint="#567295" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/rounded_button_with_white_background">

                <EditText
                    android:id="@+id/etucity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="City"
                    android:singleLine="true"
                    android:background="@null"
                    android:textColorHint="#567295" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button_with_white_background">

                <EditText
                    android:id="@+id/etustate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="State"
                    android:maxLength="15"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColorHint="#567295"
                    android:textSize="17dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_with_white_background">

            <EditText
                android:id="@+id/etuemailid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Email Id"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColorHint="#567295"
                android:textSize="17dp" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="Click here for the charges applicable if any"
            android:textColor="#567295"
            android:textSize="15dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/btnlayout"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/btnuSubmit"
                    android:layout_width="180dp"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_button_with_color_background"
                    android:gravity="center"
                    android:text="Update"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
</ScrollView>