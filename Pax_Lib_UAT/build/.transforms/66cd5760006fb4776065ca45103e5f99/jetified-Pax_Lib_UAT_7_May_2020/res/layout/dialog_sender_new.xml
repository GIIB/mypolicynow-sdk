<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#003778">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/primary"
            android:gravity="center"
            android:singleLine="true"
            android:text="Registration Confirmation"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/cancelDialogView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_cancel_white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:gravity="center">

    <LinearLayout
        android:id="@+id/llname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:id="@+id/tvrcname"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Name"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/etname"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:background="#ffffff"
            />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/llmobno"
            android:layout_below="@+id/llname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvmobno"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Mobile No"
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/etmobno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textSize="16dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llemailid"
            android:layout_below="@+id/llmobno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvemailid"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Email Id"
                 android:background="#ffffff"/>
            <TextView
                android:id="@+id/etemailid"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="#ffffff"
                android:textSize="16dp"

                />
        </LinearLayout>






    </RelativeLayout>



    <LinearLayout
        android:id="@+id/resendsRefundButtonsView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#426A9A"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>