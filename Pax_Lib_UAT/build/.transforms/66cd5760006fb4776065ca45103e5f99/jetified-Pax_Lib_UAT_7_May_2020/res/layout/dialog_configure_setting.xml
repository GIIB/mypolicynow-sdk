<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">


    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_50"
        android:gravity="center"
        android:text="Configuration"
        android:textColor="@color/header_text"
        android:textSize="@dimen/header_text_size" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="@dimen/padding_30"
        android:layout_height="@dimen/padding_30"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_cancel"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/RlFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHeading"
        android:layout_margin="@dimen/padding_20"
        android:background="#fff">

        <EditText
            android:id="@+id/etdlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="Enter order-id"
            android:padding="@dimen/padding_10"
            android:textColor="@color/header_text"
            android:textColorHint="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:layout_below="@+id/etdlabel"
            android:background="@color/view_border"></View>

        <EditText
            android:id="@+id/etdAddData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginTop="@dimen/padding_5"
            android:background="@null"
            android:gravity="center"
            android:hint="Enter label of additional data"
            android:padding="@dimen/padding_10"
            android:textSize="@dimen/normal_text_size" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_1"
            android:layout_below="@+id/etdAddData"
            android:background="@color/view_border"></View>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RlFields"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_with_dblue_background"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="@dimen/sub_header_text_size"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>