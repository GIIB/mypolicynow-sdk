<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.prepaid.HomeScreen_prepaid">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Choose any of the options"
            android:textColor="#567295"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/buttonView1"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_button_with_white_background">

                <TextView
                    android:id="@+id/btnIssuance"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/rounded_button_with_color_background"
                    android:gravity="center"
                    android:text="Issuance"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonView2"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/buttonView1"
            >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_button_with_white_background">

                <TextView
                    android:id="@+id/btnTopup"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/rounded_button_with_color_background"
                    android:gravity="center"
                    android:text="Top Up"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonView3"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/buttonView2"
            >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_button_with_white_background">

                <TextView
                    android:id="@+id/btnWithdrawl"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/rounded_button_with_color_background"
                    android:gravity="center"
                    android:text="Withdrawl"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonView14"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/buttonView3"
            >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_button_with_white_background">

                <TextView
                    android:id="@+id/btnBalance"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/rounded_button_with_color_background"
                    android:gravity="center"
                    android:text="Balance Inquiry"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
