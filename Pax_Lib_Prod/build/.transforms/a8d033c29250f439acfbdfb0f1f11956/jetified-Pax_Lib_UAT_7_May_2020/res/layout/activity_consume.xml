<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_consume"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tradepaypw.view.ConsumeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trans_sale"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="3dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_15"/>


    <LinearLayout
        android:id="@+id/trans_amount_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_30"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trans_amount"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/font_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_7"
            android:layout_marginStart="@dimen/padding_7"
            android:text="@string/rup_sym"
            android:textColor="@color/secondaryColorBlack"
            android:textSize="@dimen/font_20"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_default"
            android:textColor="@color/secondaryColorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/font_20" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_15"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:layout_marginTop="4dp"
        android:maxLength="20"
        android:gravity="center"
        android:textColor="@color/secondaryColorBlack"
        android:background="@drawable/shape_edit"
        android:clickable="false"
        android:textSize="@dimen/font_16"
        android:visibility="gone"
        android:focusable="true"
        android:password="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:text="@string/without_password"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_14"
        android:visibility="gone"
        android:id="@+id/textView2" />

    <!--<com.pax.tradepaypw.view.SoftKeyboardPasswordStyle-->
        <!--android:id="@+id/soft_keyboard_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginTop="70dp"-->
        <!--android:background="@color/keyboard_background_color" />-->

</LinearLayout>
