<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#003778">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="Beneficiary Deleted"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/cancelDialogView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_cancel_white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llbenificiary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:gravity="center">



        <LinearLayout
            android:id="@+id/llBenTitle"
            android:layout_below="@id/llSenderMobile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tvBenTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llmobno"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Beneficiary"
                android:background="#ffffff"/>

            <View
                android:id="@+id/ViewBen"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvBenTitle"
                android:layout_centerInParent="true"
                android:background="#000"></View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llmobno"
            android:layout_below="@+id/llBenTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvbeAccNo"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="16dp"
                android:text="Acc No."
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/etbeaccnoR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="16dp"
                android:background="#ffffff"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llemailid"
            android:layout_below="@+id/llmobno"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvbeifsccode"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"

                android:textSize="16dp"
                android:text="IFSC "
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/etbeifsccodeR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:background="#ffffff"

                />
        </LinearLayout>


    </RelativeLayout>






    <LinearLayout
        android:id="@+id/resendsRefundButtonsView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/DoneB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center"
            android:background="#FCBD52"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Done"/>
    </LinearLayout>
</RelativeLayout>
