<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/half_circle_blue"
        android:weightSum="3"
        >

        <RelativeLayout
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:weightSum="3"
            >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ongomerchant_logo"
                    android:layout_margin="10dp"

                    />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Device Registration"
                android:textColor="@color/light_blue"
                android:textSize="18dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/headerView"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter captcha"
                android:textColor="@color/light_blue"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                />


            <LinearLayout
                android:id="@+id/llCaptcha"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_with_black_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <com.youbank.functions.MyTextView
                        android:id="@+id/otpno1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="1"
                        android:textColor="@color/light_blue"
                        android:textSize="25dp" />

                    <com.youbank.functions.MyTextView
                        android:id="@+id/otpno2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/otpno1"
                        android:text="1"
                        android:textColor="@color/light_blue"
                        android:textSize="25dp" />

                    <com.youbank.functions.MyTextView
                        android:id="@+id/otpno3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/otpno2"
                        android:text="1"
                        android:textColor="@color/light_blue"
                        android:textSize="25dp" />

                    <com.youbank.functions.MyTextView
                        android:id="@+id/otpno4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/otpno3"
                        android:text="1"
                        android:textColor="@color/light_blue"
                        android:textSize="25dp" />

                    <com.youbank.functions.MyTextView
                        android:id="@+id/otpno5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/otpno4"
                        android:text="1"
                        android:textColor="@color/light_blue"
                        android:textSize="25dp" />

                    <com.youbank.functions.MyTextView
                        android:id="@+id/otpno6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/otpno5"
                        android:text="1"
                        android:textColor="@color/light_blue"
                        android:textSize="25dp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llvalue"
                android:layout_width="190dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/llCaptcha"
                android:background="@drawable/rounded_button_with_white_background">

                <EditText
                    android:id="@+id/otp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter captcha"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="15dp" />
            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_below="@+id/imageView1"

                >

                <Button
                    android:id="@+id/dialogButtonOK"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:text="Ok"
                    android:layout_alignParentLeft="true"
                    android:textColor="#fff"
                    android:background="@drawable/rounded_button_with_color_background"
                    />

                <Button
                    android:id="@+id/dialogButtonCancel"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_button_with_color_background"
                    />


            </RelativeLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ivIndiatransact"
                    android:text="powered by"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    />

                <ImageView
                    android:id="@+id/ivindusBankLogo"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/indiatransact_logo"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ivindusBankLogo"
                    android:text="@string/Indusand_bank"
                    android:layout_gravity="right"
                    android:textColor="#fff"
                    />

                <ImageView
                    android:id="@+id/ivIndiatransact"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_indusind_bank_logo"
                    android:layout_gravity="end"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>

