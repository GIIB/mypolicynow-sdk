<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#003778">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/primary"
            android:gravity="center"
            android:singleLine="true"
            android:text="Transaction"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/cancelDialogView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_cancel_white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/llname"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvsenmobV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Sender"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/etsenmobtxn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"

                android:background="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llbenmob"
            android:layout_below="@+id/llname"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvbenmobV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Beneficiary"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/etbemob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:background="#ffffff"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llaccno"
            android:layout_below="@+id/llbenmob"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvbenaccno"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="16dp"
                android:text="Account Number"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/etbenaccno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="16dp"
                android:background="#ffffff"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llemailid"
            android:layout_below="@+id/llaccno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tvamountV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Amount"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/etamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:singleLine="true"
                android:background="#ffffff"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProcesingfees"
            android:layout_below="@id/llemailid"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tvProcTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llmobno"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Processing Fees"
                android:background="#ffffff"/>

            <View
                android:id="@+id/ViewBen"
                android:layout_width="140dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvProcTitle"
                android:layout_centerInParent="true"
                android:background="#000"></View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProcesingfees1"
            android:layout_below="@id/llProcesingfees"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tvprocfee1"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llmobno"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Processing Fees"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/etprocfee1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:singleLine="true"
                android:background="#ffffff"

                />


        </LinearLayout>
        <TextView
            android:id="@+id/tvprocfee31"
            android:layout_below="@+id/llProcesingfees1"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llmobno"
            android:singleLine="true"

            android:gravity="left"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="(Inclusive Service Tax)"
            android:background="#ffffff"/>

        <LinearLayout
            android:id="@+id/llProcesingfees2"
            android:layout_below="@id/llProcesingfees1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tvprocfee2"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llmobno"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Processing Fees"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/etprocfee2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:singleLine="true"
                android:background="#ffffff"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProcesingfees3"
            android:layout_below="@id/llProcesingfees2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tvprocfee3"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llmobno"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Service Tax (Inclusive)"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/etprocfee3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:singleLine="true"
                android:background="#ffffff"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProcesingfees4"
            android:layout_below="@id/llProcesingfees3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="#ffffff">

            <TextView
                android:id="@+id/tvprocfee4"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llmobno"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="IMPS Fees"
                android:background="#ffffff"/>

            <TextView
                android:id="@+id/etprocfee4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:singleLine="true"
                android:background="#ffffff"

                />


        </LinearLayout>





    </RelativeLayout>



    <LinearLayout
        android:id="@+id/resendsRefundButtonsView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBackamtcon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_cancel"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>