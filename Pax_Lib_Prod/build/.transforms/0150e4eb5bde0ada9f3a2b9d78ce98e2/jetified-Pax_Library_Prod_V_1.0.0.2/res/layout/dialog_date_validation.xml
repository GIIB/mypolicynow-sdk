<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_45">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/padding_5"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_text_size" />

        <ImageView
            android:id="@+id/cancelDialogView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"
            android:src="@drawable/ic_action_cancel_white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/textMessageView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_50"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/padding_25"
        android:layout_marginRight="@dimen/padding_25"
        android:layout_marginTop="@dimen/padding_30"
        android:background="#ffffff"
        android:endColor="#ffffff"
        android:startColor="#ffffff"

        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center"
                android:text="Please Enter Correct Dates"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/padding_40"
        android:layout_below="@+id/textMessageView"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginRight="@dimen/padding_30"
        android:layout_marginTop="@dimen/padding_15">

        <Button
            android:id="@+id/btnOkay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/rounded_button_with_dblue_background"
            android:gravity="center"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/sub_header_text_size"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>