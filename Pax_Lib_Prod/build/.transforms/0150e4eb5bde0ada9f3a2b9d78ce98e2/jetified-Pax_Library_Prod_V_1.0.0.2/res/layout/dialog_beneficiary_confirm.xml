<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:background="#ffffff">



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#003778">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/primary"
            android:gravity="center"
            android:singleLine="true"
            android:text="Beneficiary Registration "
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/cancelDialogView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_cancel_white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llbenificiary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ffffff"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/llSender"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvSender"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Sender"
                android:background="#ffffff"/>
                />

            <View
                android:id="@+id/ViewSen"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvSender"
                android:layout_centerInParent="true"
                android:background="#000"></View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSenderMobile"
            android:layout_below="@+id/llSender"
            android:layout_width="match_parent"

            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvSenderMob"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="16dp"
                android:text="Mob No."
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/etSenderMob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="16dp"
                android:background="#ffffff"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBenTitle"
            android:layout_below="@id/llSenderMobile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="#ffffff">

        <TextView
            android:id="@+id/tvBenTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llmobno"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Beneficiary"
            android:background="#ffffff"/>

            <View
                android:id="@+id/ViewBen"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvBenTitle"
                android:layout_centerInParent="true"
                android:background="#000"></View>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llmobno"
            android:layout_below="@+id/llBenTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvbeAccNo"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:textSize="16dp"
                android:text="Acc No."
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/etbeaccno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="16dp"
                android:background="#ffffff"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llemailid"
            android:layout_below="@+id/llmobno"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvbeifsccode"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"

                android:textSize="16dp"
                android:text="IFSC "
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/etbeifsccode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:background="#ffffff"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llname"
            android:layout_below="@+id/llemailid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tvbemobno"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"

                android:textSize="16dp"
                android:text="Name"
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/etbemobno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:background="#ffffff"
                />
        </LinearLayout>


    </RelativeLayout>



    <LinearLayout
        android:id="@+id/resendsRefundButtonsView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#426A9A"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_color"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>