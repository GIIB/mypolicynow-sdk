<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/padding_5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/padding_10"
        android:text="Notification Received"
        android:textColor="#FFF"
        android:textSize="@dimen/font_14"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_100"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_40"
                android:src="@drawable/success_icon_black"
                android:visibility="gone"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/tranRec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:text="Transaction Details"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_2"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_60"
                android:layout_marginRight="@dimen/padding_60"
                android:layout_marginTop="@dimen/padding_5"
                android:background="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_10"
                    android:textSize="@dimen/font_14"
                    android:text="Date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" : "
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_10"
                    />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_14"
                    android:padding="@dimen/padding_10"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_14"
                    android:paddingLeft="@dimen/padding_10"
                    android:text="Time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:text=" : "
                    android:padding="@dimen/padding_10"
                    />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_14"
                    android:padding="@dimen/padding_10" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_10"
                    android:textSize="@dimen/font_14"
                    android:text="Transaction Code"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" : "
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_10"
                    />
                <TextView
                    android:id="@+id/tv_TransactionCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_14"
                    android:padding="@dimen/padding_10"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/padding_10"
                    android:textSize="@dimen/font_14"
                    android:text="Benificiary Customer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" : "
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    android:padding="@dimen/padding_10"
                    />
                <TextView
                    android:id="@+id/tv_BenifiCustomer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_14"
                    android:padding="@dimen/padding_10"
                    />
            </LinearLayout>

