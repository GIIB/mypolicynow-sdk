<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_2">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/tab">

            <LinearLayout
                android:id="@+id/otpmsgview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="We have sent"
                    android:textColor="#fff"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/txtText2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="OTP on your mobile number"
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txtNumberOTP"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#567295"
                    android:textSize="15dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtEnterOpt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otpmsgview"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:visibility="gone"
                android:textColor="#567295"
                android:textSize="16dp" />

            <RelativeLayout
                android:id="@+id/enterOptView"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/txtEnterOpt"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rounded_button_with_white_background">

                    <EditText
                        android:id="@+id/etdEnterOTP"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="Enter OTP"
                        android:maxLength="4"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:singleLine="true"
                        android:textColor="#567295"
                        android:textColorHint="#567295"
                        android:textSize="15dp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buttonView"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/enterOptView"

                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/btnSubmitOtp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/rounded_button_with_color_background"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_marginBottom="450dp"
                android:layout_below="@+id/buttonView">

                <TextView
                    android:id="@+id/txtResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="Resend OTP."
                    android:visibility="visible"
                    android:textColor="#fff"
                    android:textSize="16dp" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/txtResendOtp"
                    android:layout_marginBottom="400dp"
                    android:layout_centerInParent="true"
                    android:background="#000"></View>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
</ScrollView>